{"ast":null,"code":"export default {\n  name: \"BlogDetail\",\n  data() {\n    return {\n      blogID: this.$route.query.blogID,\n      blog: {},\n      tagsArr: [],\n      recommendList: [],\n      commentCount: 0,\n      commentContent: '',\n      commendList: []\n    };\n  },\n  created() {\n    this.load();\n    this.loadComment();\n  },\n  methods: {\n    addReply() {},\n    loadComment() {\n      this.$request.get('/comment/selectAllForUser', {\n        params: {\n          fid: this.blogID,\n          module: 'Blog'\n        }\n      }).then(res => {\n        this.commendList = res.data || [];\n      });\n      this.$request.get('comment/selectCount', {\n        params: {\n          fid: this.blogID,\n          module: 'Blog'\n        }\n      }).then(res => {\n        this.commentCount = res.data || 0;\n      });\n    },\n    addComment() {\n      this.$request.post('comment/add', {\n        content: this.commentContent,\n        fid: this.blogID,\n        module: 'Blog'\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"success\");\n          this.commentContent = '';\n          this.loadComment();\n        }\n      });\n    },\n    setLikes() {\n      this.$request.post('/likes/set', {\n        fid: this.blogID,\n        module: \"Blog\"\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"success\");\n          this.load();\n        }\n      });\n    },\n    setCollect() {\n      this.$request.post('/collect/set', {\n        fid: this.blogID,\n        module: \"Blog\"\n      }).then(res => {\n        if (res.code === '200') {\n          this.$message.success(\"success\");\n          this.load();\n        }\n      });\n    },\n    load() {\n      this.$request.get('/blog/selectById/' + this.blogID).then(res => {\n        this.blog = res.data || {};\n        this.tagsArr = JSON.parse(this.blog.tags || '[]');\n      });\n      this.$request.get('/blog/selectRecommend/' + this.blogID).then(res => {\n        this.recommendList = res.data || [];\n      });\n    }\n  }\n};","map":{"version":3,"names":["name","data","blogID","$route","query","blog","tagsArr","recommendList","commentCount","commentContent","commendList","created","load","loadComment","methods","addReply","$request","get","params","fid","module","then","res","addComment","post","content","code","$message","success","setLikes","setCollect","JSON","parse","tags"],"sources":["src/views/front/BlogDetail.vue"],"sourcesContent":["<template>\r\n  <div class=\"main-content\">\r\n    <div style=\"display: flex; grid-gap: 10px\">\r\n      <div>\r\n        <div class=\"card\" style=\"font-size: 20px; text-align: center\">\r\n          <div>\r\n            <span style=\"cursor: pointer\" @click=\"setLikes\" :class=\"{ 'active' : blog.userLike }\"><i class=\"el-icon-s-opportunity\"></i> {{ blog.likesCount }}</span>\r\n          </div>\r\n\r\n          <div style=\"margin-top: 10px\">\r\n            <span style=\"cursor: pointer\" @click=\"setCollect\" :class=\"{ 'active' : blog.userCollect }\"><i class=\"el-icon-star-on\"></i> {{ blog.collectCount }}</span>\r\n          </div>\r\n        </div>\r\n      </div>\r\n\r\n      <div style=\"flex: 1\">\r\n        <div class=\"card\" style=\"padding: 20px 30px; margin-bottom: 10px\">\r\n          <div style=\"font-weight: bold; font-size: 24px; margin-bottom: 20px\">{{ blog.title }}</div>\r\n\r\n          <div style=\"margin-bottom: 25px; border-bottom: 1px solid #ddd; padding-bottom: 12px\">\r\n            <span style=\"margin-right: 20px\">\r\n<!--              <i class=\"el-icon-user-solid\" style=\"margin-right: 10px\"></i>{{ blog.userName }}-->\r\n              Publisher <span style=\"font-weight: bold; text-decoration: underline\"><i>{{ blog.userName }}</i></span>\r\n            </span>\r\n            <span style=\"margin-right: 20px\">\r\n<!--              <i class=\"el-icon-date\" style=\"margin-right: 10px\"></i>{{ blog.date }}-->\r\n              <span style=\"font-weight: bold; text-decoration: underline\"><i>{{ blog.date }}</i></span>\r\n            </span>\r\n            <span>\r\n<!--              <i class=\"el-icon-view\" style=\"margin-right: 10px\"></i>{{ blog.readCount }}-->\r\n              Viewed <span style=\"font-weight: bold; text-decoration: underline\"><i>{{ blog.readCount }}</i></span> times\r\n            </span>\r\n            <span >\r\n              <el-tag v-for=\"item in tagsArr\" :key=\"item\" style=\"margin-right: 5px\">{{ item }}</el-tag>\r\n            </span>\r\n          </div>\r\n\r\n          <div class=\"w-e-text\">\r\n            <div v-html=\"blog.content\"></div>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- comments -->\r\n        <div class=\"card\">\r\n          <h3 style=\"font-weight: bold; margin-bottom: 16px\">Comments: {{ commentCount }}</h3>\r\n\r\n          <div style=\"margin-bottom: 20px\">\r\n            <el-input type=\"textarea\" placeholder=\"Please write your opinions\" v-model=\"commentContent\"></el-input>\r\n            <div style=\"text-align: right; margin-top: 5px\">\r\n              <el-button size=\"medium\" @click=\"addComment()\">Add a comment</el-button>\r\n            </div>\r\n          </div>\r\n\r\n          <div>\r\n            <div style=\"display: flex; grid-gap: 20px; margin-bottom: 20px\" v-for=\"item in commendList\" :key=\"item.id\">\r\n              <img :src=\"item.avatar\" alt=\"\" style=\"width: 40px; height: 40px; border-radius: 50%\">\r\n              <div style=\"flex: 1\">\r\n                <!-- comment -->\r\n                <div style=\"margin-bottom: 20px\">\r\n                  <div style=\"margin-bottom: 5px; font-weight: bold\">{{ item.userName }}</div>\r\n                  <div style=\"margin-bottom: 5px\">{{ item.content }}</div>\r\n                  <div style=\"color: #666; font-size: 12px; cursor: pointer\">\r\n                    <span style=\"margin-right: 20px\">{{ item.time }}</span>\r\n                    <span><i class=\"el-icon-s-comment\"></i> Add a comment</span>\r\n                  </div>\r\n\r\n                  <div style=\"margin-top: 15px\">\r\n                    <el-input placeholder=\"Add a comment\"></el-input>\r\n                    <div style=\"text-align: right; margin-top: 5px\">\r\n                      <el-button size=\"mini\" @click=\"addReply()\">Add a comment</el-button>\r\n                    </div>\r\n                  </div>\r\n                </div>\r\n                <!-- comment -->\r\n\r\n                <!-- reply -->\r\n                <div style=\"display: flex; grid-gap: 20px; margin-bottom: 20px\" v-for=\"sub in item.child\" :key=\"item.id\">\r\n                  <img :src=\"sub.avatar\" alt=\"\" style=\"width: 35px; height: 35px; border-radius: 50%\">\r\n                  <div style=\"flex: 1\">\r\n                    <div style=\"margin-bottom: 5px\">\r\n                      <span style=\"font-weight: bold\">{{ sub.userName }}</span>\r\n                      <span v-if=\"sub.replyUser !== item.userName\"> reply {{ sub.replyUser }}</span>\r\n                    </div>\r\n                    <div style=\"margin-bottom: 5px\">{{ sub.content }}</div>\r\n                    <div style=\"color: #666; font-size: 12px; cursor: pointer\">\r\n                      <span style=\"margin-right: 20px\">{{ sub.time }}</span>\r\n                      <span><i class=\"el-icon-s-comment\"></i> Add a comment</span>\r\n                    </div>\r\n                  </div>\r\n                </div>\r\n                <!-- reply -->\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n        <!-- end comments -->\r\n      </div>\r\n\r\n      <div style=\"width: 260px\">\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"display: flex; align-items: center; grid-gap: 12px; margin-bottom: 16px\">\r\n            <img :src=\"blog.user?.avatar\" alt=\"\" style=\"width: 50px\">\r\n            <div style=\"flex: 1\">\r\n              <div style=\"font-weight: bold; font-size: 18px; color: darkblue\">{{ blog.user?.name }}</div>\r\n              <div style=\"margin-top: 5px\">posted at {{ blog.date }}</div>\r\n            </div>\r\n          </div>\r\n\r\n          <div style=\"display: flex\">\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\"><i>Articles</i></div>\r\n              <div>0</div>\r\n            </div>\r\n\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\"><i>Likes</i></div>\r\n              <div>0</div>\r\n            </div>\r\n\r\n            <div style=\"flex: 1; text-align: center\">\r\n              <div style=\"margin-bottom: 5px\"><i>Favorites</i></div>\r\n              <div>0</div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"card\" style=\"margin-bottom: 10px\">\r\n          <div style=\"font-weight: bold; font-size: 16px; padding-bottom: 10px; border-bottom: 1px solid #ddd; margin-bottom: 10px\">Recommend to read</div>\r\n          <div>\r\n            <div style=\"margin-bottom: 10px\" v-for=\"item in recommendList\" :key=\"item.id\">\r\n              <a :href=\"'/front/blogDetail?blogID=' + item.id\"><div style=\"margin-bottom: 5px\" class=\"blog-title\">{{ item.title }}</div></a>\r\n              <div style=\"color: #888\">\r\n                <span>Views</span> <span>{{ item.readCount }}</span>\r\n                <span style=\"margin-left: 10px\">Likes</span> <span>{{ item.likesCount }}</span>\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"card\">\r\n          等广告商投喂\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\n\r\nexport default {\r\n  name: \"BlogDetail\",\r\n  data() {\r\n    return {\r\n      blogID: this.$route.query.blogID,\r\n      blog: {},\r\n\r\n      tagsArr: [],\r\n      recommendList: [],\r\n\r\n      commentCount: 0,\r\n      commentContent: '',\r\n      commendList: [],\r\n    }\r\n  },\r\n\r\n  created() {\r\n    this.load()\r\n    this.loadComment()\r\n  },\r\n\r\n  methods: {\r\n    addReply() {\r\n\r\n    },\r\n\r\n    loadComment() {\r\n      this.$request.get('/comment/selectAllForUser', {\r\n        params: { fid: this.blogID, module: 'Blog' }\r\n      }).then(res => {\r\n        this.commendList = res.data || []\r\n      })\r\n\r\n      this.$request.get('comment/selectCount', {\r\n        params: { fid: this.blogID, module: 'Blog' }\r\n      }).then(res => {\r\n        this.commentCount = res.data || 0\r\n      })\r\n    },\r\n\r\n    addComment() {\r\n      this.$request.post('comment/add', { content: this.commentContent, fid: this.blogID, module: 'Blog' }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"success\")\r\n          this.commentContent = ''\r\n          this.loadComment()\r\n        }\r\n      })\r\n    },\r\n\r\n    setLikes() {\r\n      this.$request.post('/likes/set', { fid: this.blogID, module: \"Blog\" }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"success\")\r\n          this.load()\r\n        }\r\n      })\r\n    },\r\n\r\n    setCollect() {\r\n      this.$request.post('/collect/set', { fid: this.blogID, module: \"Blog\" }).then(res => {\r\n        if (res.code === '200') {\r\n          this.$message.success(\"success\")\r\n          this.load()\r\n        }\r\n      })\r\n    },\r\n\r\n    load() {\r\n      this.$request.get('/blog/selectById/' + this.blogID).then(res => {\r\n        this.blog = res.data || {}\r\n        this.tagsArr = JSON.parse(this.blog.tags || '[]')\r\n      })\r\n\r\n      this.$request.get('/blog/selectRecommend/' + this.blogID).then(res => {\r\n        this.recommendList = res.data || []\r\n      })\r\n    },\r\n  }\r\n}\r\n</script>\r\n\r\n<style